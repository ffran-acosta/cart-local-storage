    <%let product = productsForCart.find(x=> { %>
        <% if (x.id == element.id ) { %>
            <% return x %>
        <% } %>
    <% }) %>
    
    <li class="li-cart">
        <picture>
            <img src="/img/product.jpg">
        </picture>

        <section class="section-title">
            <p class="p-title"><%= product.title %></p>
        </section>

        <section class="section-quantity">
            <button class="decrement">-</button>
            <p class="p-quantity"><%= element.quantity %></p>
            <button class="increment">+</button>
        </section>

        <section class="section-price">
            <p class="p-price">$ <%= product.price * element.quantity  %></p>
        </section>
        <button class="remove">X</button>

    </li>

